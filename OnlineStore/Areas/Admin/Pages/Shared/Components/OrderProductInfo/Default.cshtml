@using DAL.Data.Enums
@using Utilities.Commons
@using OnlineStore.Models.ViewModels
@model List<OrderProductInfoViewModel>

<div class="x_panel">
    <div class="x_content">
        <br />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Giảm giá</th>
                    <th>Thành tiền (VNĐ)</th>
                </tr>
            </thead>
            <tbody id="tbl-content">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="div__img--center"><img src="/images/client/ProductImages/@item.Image" width="100" alt="Không thể hiển thị hình ảnh" /></td>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@item.SaleOff</td>
                        <td>@item.Amount</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-offset-9">
                <span>Tổng tiền: @TempData["TotalAmount"] VNĐ</span>
            </div>
        </div>
    </div>
</div>