@using DAL.Data.Entities
@using DAL.Repositories
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IUserRepository UserRepository
<link href="~/css/loginpartial.css" rel="stylesheet" />

@{
    var user = UserManager.FindByNameAsync(UserManager.GetUserName(User)).Result;
}
@if (user != null && !UserRepository.IsAdmin(user))
{
    <li>
        <div class="dropdown">

            <a class="current-open" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                <span>
                    <i class="fa fa-angle-down"></i>
                    @{
                        @:@user.Name
                        var avatar = user.Avatar;
                        if (string.IsNullOrEmpty(avatar))
                        {
                            @:&nbsp;<img class="my-avatar" src="/images/admin/user.png">
                        }
                        else
                        {
                            @:&nbsp;<img class="my-avatar" src=@($"/images/shared/avatar/{avatar}")>
                        }
                    }
                </span>
            </a>
