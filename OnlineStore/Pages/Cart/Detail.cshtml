                    <img src="@Url.Content("~/Content/HinhAnhSP/"+Model.HinhAnh3)" />*@
                </li>
            </ul>
        </div>
        <!-- FlexSlider -->
        <script defer src="~/js/client/product/jquery.flexslider.js"></script>
        <link rel="stylesheet" href="~/css/client/cart/flexslider.css" type="text/css" media="screen" />

        <script>
            // Can also be used with $(document).ready()
            $(window).load(function () {
                $('.flexslider').flexslider({
                    animation: "slide",
                    controlNav: "thumbnails"
                });
            });
        </script>
    </div>
    <div class="col-md-7 single-top-in simpleCart_shelfItem">
        <div class="single-para ">
            <h4>@Model.Item.Name</h4>
            <div class="star-on">
