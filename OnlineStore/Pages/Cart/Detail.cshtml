                    <li><a href="#"><i> </i></a></li>
                    <li><a href="#"><i> </i></a></li>
                    <li><a href="#"><i> </i></a></li>
                </ul>
                <div class="review">
                    <a href="#"> Lượt xem: @Model.Item.View</a>

                </div>
                <div class="clearfix"> </div>
            </div>

            <h5 class="item_price">@Model.Item.Price.ToString("#,##") VNĐ</h5>
            @*<p>
                    @Html.Raw(Model.CauHinh)
                </p>*@
            <a href="#" class="add-cart item_add">Giỏ hàng</a>
        </div>

    </div>
    <div class="clearfix"> </div>
    <h3>Thông tin sản phẩm</h3>
