@model OnlineStore.Pages.Cart.DetailModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Pages/Layout/_ProductLayout.cshtml";
}

<div class="col-md-9 product-price1">
    <div class="col-md-5 single-top">
        <div class="flexslider">
            <ul class="slides">
                <li data-thumb="@Url.Content("~/Content/HinhAnhSP/"+Model.Item.Image)">
                    <img src="@Url.Content("~/Content/HinhAnhSP/"+Model.Item.Image)" />
                </li>
                @*<li data-thumb="@Url.Content("~/Content/HinhAnhSP/"+Model.HinhAnh1)">
