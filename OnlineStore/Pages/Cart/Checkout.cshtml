@page
@using DAL.Data.Entities
@using DAL.Models
@using Microsoft.AspNetCore.Identity

@inject UserManager<ApplicationUser> UserManager
@model OnlineStore.Pages.Order.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Pages/Shared/_Layout.cshtml";

}
@section Scripts{
    <script src="~/js/client/cart/checkout.js" rel="stylesheet"></script>
    <script>
        checkoutcart.init();
    </script>
}
@section Styles{
    <link href="~/css/client/cart/checkout.css" rel="stylesheet" />
}
@{
    var cus = await UserManager.GetUserAsync(HttpContext.User);
}

<!-- Main Container -->
<section class="main-container col2-right-layout">
    <div class="main container">
        <br />
        <div class="row">
            <div class="col-main col-sm-7 col-xs-12">
                <div class="page-title">
                    <h2>Sản phẩm của bạn</h2>
                </div>
                <!-- main-container -->
                <div class="box-border">
                    <div class="order-detail-content">
                        <table class="table table-bordered table-responsive jtv-cart-summary">
                            <thead>
                                <tr>
                                    <th class="col-sm-2">Sản phẩm</th>
                                    <th class="col-sm-6">Mô tả</th>
                                    <th class="col-sm-2">Số lượng</th>
                                    <th class="col-sm-2">Tổng giá</th>
                                </tr>
                            </thead>
                            <tbody id="container-pay-cart"></tbody>
                        </table>
                    </div>
                    <script id="template-cart" type="x-tmpl-mustache"  >
                        <tr>
                            <td>
                                <input type="hidden" id="itemId" value="{{ItemId}}" />
                                <img src="{{Image}}" alt="Sản phẩm không thể hiển thị" width="100" class="img-responsive" />
                            </td>
                            <td>
                                <a href="/Product/Detail?id={{ItemId}}">
                                    <h4 id="productnamecheckout" class="nomargin">{{ProductName}}</h4>
                                </a>
                                <span class="text-danger">{{OutOfStockNotifyCation}}</span>
                            </td>
                            <td data-th="Quantity" class="quantity">{{Quantity}}</td>
                            <td data-th="Price" class="price">{{Price}}</td>
                        </tr>
                    </script>
                    <div class=" right sidebar col-sm-6">
                        <table class="table table-bordered table-responsive jtv-cart-summary">
                            <thead>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <strong>
                                            Tổng số sản phẩm:
                                        </strong>
                                    </td>
                                    <td class="col-sm-4" id="itemTotal"></td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>
                                            Tạm tính:
                                        </strong>
                                    </td>
                                    <td id="PriceTotaltmp"></td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
                <!--End main-container -->
            </div>
            <aside class="right sidebar col-sm-5 col-xs-12">
                <div class="page-title">
                    <h2>Hóa đơn của bạn</h2>
                </div>
                <div class="sidebar-checkout block">
                    <div class="block-content">
                        <dl>
                            <dt class="complete"> Thông tin người nhận </dt>
                            <dd class="complete">
                                <address>
                                    <br />
                                    <div><i class="fa fa-user-circle-o" aria-hidden="true"></i> @cus.Name <a id="btneditaddress" class="linkchange" href="#">Chỉnh sửa</a><br><br /></div>
                                    <div>&nbsp;&nbsp;&nbsp;&nbsp;<p id="txtAddress"></p>  <br><br /> </div>
                                    <i class="fa fa-phone-square" aria-hidden="true"></i> @cus.PhoneNumber <a class="linkchange" href="#">Chỉnh sửa</a><br><br />
                                    <i class="fa fa-envelope" aria-hidden="true"></i> @cus.Email <a class="linkchange" href="#">Chỉnh sửa</a> <br><br />
                                </address>
                            </dd>   
                            <dt class="complete"> Thông tin đơn hàng  </dt>
                            <dd class="complete">
                                <address>
                                    <br />
                                    Số sản phẩm: <span id="itemTotal1"></span> <a class="linkchange" href="#">Chỉnh sửa</a><br><br />
                                    Tạm tính: <span id="PriceTotaltmp1"></span> <a class="linkchange" href="#">Chỉnh sửa</a><br><br />
                                    Hình thức nhận hàng <a class="linkchange" href="#">Chỉnh sửa</a><br><br />
                                    Phương thức thanh toán <a class="linkchange" href="#">Chỉnh sửa</a> <br><br />
                                    Tổng cộng <a class="linkchange" hrsef="#">Chỉnh sửa</a> <br><br />
                                </address>
                            </dd>
                        </dl>
                        <button id="btnpay" class="button pro-action col-md-12"> THANH TOÁN</button>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>
<!-- Main Container End -->
<!-- service section -->
<div class="jtv-service-area">
    <div class="container">
        <div class="row">
            <div class="col col-md-3 col-sm-6 col-xs-12">
                <div class="block-wrapper ship">
                    <div class="text-des">
                        <div class="icon-wrapper"><i class="fa fa-paper-plane"></i></div>
                        <div class="service-wrapper">
                            <h3>World-Wide Shipping</h3>
                            <p>On order over $99</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-md-3 col-sm-6 col-xs-12 ">
                <div class="block-wrapper return">
                    <div class="text-des">
                        <div class="icon-wrapper"><i class="fa fa-rotate-right"></i></div>
                        <div class="service-wrapper">
                            <h3>30 Days Return</h3>
                            <p>Moneyback guarantee </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-md-3 col-sm-6 col-xs-12">
                <div class="block-wrapper support">
                    <div class="text-des">
                        <div class="icon-wrapper"><i class="fa fa-umbrella"></i></div>
                        <div class="service-wrapper">
                            <h3>Support 24/7</h3>
                            <p>Call us: ( +123 ) 456 789</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-md-3 col-sm-6 col-xs-12">
                <div class="block-wrapper user">
                    <div class="text-des">
                        <div class="icon-wrapper"><i class="fa fa-tags"></i></div>
                        <div class="service-wrapper">
                            <h3>Member Discount</h3>
                            <p>25% on order over $199</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="_AddressManagementModal" />