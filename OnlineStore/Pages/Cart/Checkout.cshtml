@page
@using DAL.Data.Entities
@using DAL.Models
@using Microsoft.AspNetCore.Identity
@using  Utilities.Extensions
@using DAL.Data.Enums

@inject UserManager<ApplicationUser>    UserManager
@model OnlineStore.Pages.Order.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Pages/Shared/_Layout.cshtml";

}
@section Scripts{
    <script src="~/js/client/cart/checkout.js" rel="stylesheet"></script>
    <script src="~/lib/jquery-easyui-1.7.6/jquery.easyui.min.js"></script>

    <script>
        checkoutcart.init();
    </script>
}
@section Styles{
    <link href="~/lib/jquery-easyui-1.7.6/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/lib/jquery-easyui-1.7.6/themes/icon.css" rel="stylesheet" />

    <link href="~/css/client/cart/checkout.css" rel="stylesheet" />
}
@{
    var cus = await UserManager.GetUserAsync(HttpContext.User);
}

<!-- Main Container -->
<section class="main-container col2-right-layout">
    <div class="main container">
        <br />
        <div class="row">
            <div class="col-main col-sm-8 col-xs-12">
                <div class="page-title">
                    <h2>Sản phẩm của bạn</h2>
                </div>
                <!-- main-container -->
                <div class="box-border">
                    <div class="order-detail-content">
                        <table class="table table-bordered table-responsive jtv-cart-summary" style="background-color:whitesmoke">
                            <thead>
                                <tr>
                                    <th class="col-sm-2">Sản phẩm</th>
                                    <th class="col-sm-6">Mô tả</th>
                                    <th class="col-sm-2">Số lượng</th>
                                    <th class="col-sm-2">Tổng giá</th>
                                </tr>
                            </thead>
                            <tbody id="container-pay-cart"></tbody>
                        </table>
                    </div>
                    <script id="template-cart" type="x-tmpl-mustache">
                        <tr>
                            <td>
                                <input type="hidden" id="itemId" value="{{ItemId}}" />
                                <img src="{{Image}}" alt="Sản phẩm không thể hiển thị" width="100" class="img-responsive" />
                            </td>
                            <td>
                                <a href="/Product/Detail?id={{ItemId}}">
                                    <h4 class="nomargin productnamecheckout">{{ProductName}}</h4>
                                </a>
                                <span class="text-danger">{{OutOfStockNotifyCation}}</span>
                            </td>
                            <td data-th="Quantity" class="quantity productnamecheckout ">{{Quantity}}</td>
                            <td data-th="Price" class="price">{{TotalPrice}}</td>
                        </tr>
                    </script>
                </div>
                <!--End main-container -->
            </div>
            <aside class="right sidebar col-sm-4 col-xs-12">
                <div class="page-title">
                    <h2>Hóa đơn của bạn</h2>
                </div>
                <div class="sidebar-checkout block main-container">
                    <div class="block-content">
                        <dl>
                            <dt class="complete"> Thông tin người nhận </dt>
                            <dd class="complete">
                                <address>
                                    <br />
                                    <div>
                                        <i class="fa fa-user-circle-o" aria-hidden="true"></i> <h id="labelName"></h><a id="btneditaddress" class="linkchange " href="#">Chỉnh sửa</a>
                                    </div><br />
                                    <div style="padding: 0 25% 0 3%" id="labelAddress">
                                    </div><br />
                                    <div>
                                        <i class="fa fa-phone-square" aria-hidden="true"></i> <h id="labelPhoneNumber"></h>
                                    </div>
                                    <div style="border-bottom: 5px solid #e5e5e5; margin-top: 5%">

                                    </div>

                                </address>
                            </dd>
                            <dt class="complete" style="border-bottom: 1px solid #e5e5e5"> Thông tin đơn hàng  </dt>
                            <dd class="complete">
                                <address>
                                    <br />
                                    <div style="border-bottom: 1px solid #e5e5e5">
                                        <i class="fa fa-hand-o-right color-black" aria-hidden="true"></i>
                                        Số sản phẩm: <span id="itemTotal1"></span> <br><br />
                                    </div>
                                    <div style="border-bottom: 1px solid #e5e5e5">
                                        <i class="fa fa-dot-circle-o" aria-hidden="true"></i>
                                        Tạm tính: <span id="PriceTotaltmp1"></span><br><br />
                                    </div>
                                    <div style="border-bottom: 1px solid #e5e5e5">
                                        <i class="fa fa-hand-peace-o" aria-hidden="true"></i>
                                        Hình thức giao hàng <a id="btneditdeliveryMethod" class="linkchange" href="#">Chỉnh sửa</a><br><br />
                                        <div id="deliveryMethod" class="box-border" style="padding: 0 25% 0 4%">
                                            <ul class="shipping_method">
                                                <li class="li-radio-delivery">
                                                    <label for="radio_button_3">
                                                        <input value="Gia hàng tiêu chuẩn" class="radio-delivery" type="radio" name="radiodelivery" id="radiodelivery-standard">
                                                        Giao hàng tiêu chuẩn
                                                    </label>
                                                    <p class="subcaption " style="margin-left: 7%;font-size:80%">
                                                        <i class="fa fa-info-circle" style=" indianred"></i>
                                                        Thời gian giao hàng trong vòng từ 2-3 ngày kể từ ngày đặt hàng
                                                    </p>
                                                </li>
                                                <li class="li-radio-delivery">
                                                    <label for="radio_button_4">
                                                        <input value="Giao hàng ưu tiên" class="radio-delivery" type="radio" name="radiodelivery">
                                                        Giao hàng ưu tiên
                                                    </label>
                                                    <p class="subcaption " style="margin-left: 7%;font-size:80%">
                                                        <i class="fa fa-info-circle" style=" indianred"></i>
                                                        Thời gian giao hàng trong vòng 24h
                                                    </p>
                                                </li>
                                                <li class="li-radio-delivery">
                                                    <label for="radio_button_5">
                                                        <input value="Nhận hàng tại showroom" class="radio-delivery" type="radio" name="radiodelivery">
                                                        Nhận hàng tại showroom
                                                    </label>
                                                    <p class="subcaption " style="margin-left: 7%;font-size:80%">
                                                        <i class="fa fa-info-circle" style=" indianred"></i>
                                                        Chọn địa chỉ showroom đến nhận:
                                                    </p>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div style="border-bottom: 1px solid #e5e5e5">
                                        <i class="fa fa-money" aria-hidden="true"></i>
                                        Phương thức thanh toán <a class="linkchange" href="#">Chỉnh sửa</a> <br><br />
                                        <div id ="paymentMethod"class="box-border"  style="padding: 0 25% 0 4%">
                                            <ul>
                                                <li>
                                                    <label for="radio_button_5">
                                                        <input type="radio"  name="radio_4" id="radio_button_checkin" />
                                                        Thanh toán khi nhận hàng
                                                    </label>
                                                </li>
                                                <li>
                                                    <label for="radio_button_5">
                                                        <input type="radio"  name="radio_4" id="radio_button_atm" />
                                                        Thanh toán bằng thẻ ATM nội địa
                                                    </label>
                                                </li>
                                                <li>
                                                    <label for="radio_button_6">
                                                        <input type="radio" name='radio_4' id="radio_button_creditcard" />
                                                        Thanh toán bằng thẻ quốc tế
                                                    </label>
                                                    <div class="payment none" id="creditcardtDIV">
                                                        <ul>
                                                            <li><a href="#"><img class="imgpayment" title="Visa" alt="Visa" src="~/images/client/layout/visa.png"></a></li>
                                                            <li><a href="#"><img class="imgpayment" title="Paypal" alt="Paypal" src="~/images/client/layout/paypal.png"></a></li>
                                                            <li><a href="#"><img class="imgpayment" title="Discover" alt="Discover" src="~/images/client/layout/discover.png"></a></li>
                                                            <li><a href="#"><img class="imgpayment" title="Master Card" alt="Master Card" src="~/images/client/layout/master-card.png"></a></li>
                                                        </ul>
                                                    </div>
                                                </li>
                                                <li>
                                                    <label for="radio_button_5">
                                                        <input type="radio"  name="radio_4" id="radio_button_momo" >
                                                        Thanh toán bằng ví điện tử
                                                    </label>
                                                    <div class="payment none" id="ecashDIV">
                                                        <ul>
                                                            <li><a href="#"><img class="imgpayment" title="Momo" alt="Visa" src="~/images/client/layout/momo.png"></a></li>
                                                        </ul>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div style="border-bottom: 1px solid #e5e5e5">
                                        <i class="fa fa-plus-square" aria-hidden="true"></i>
                                        Tổng cộng: <br><br />
                                    </div>
                                </address>
                            </dd>
                        </dl>
                        <button id="btnpay" type="button" class="btnPay col-md-12"> THANH TOÁN</button>
                    </div>
                </div>

            </aside>
        </div>
    </div>
</section>
<!-- Main Container End -->
<!-- service section -->
<div class="jtv-service-area">
    <div class="container">
        <div class="row">
            <div class="col col-md-3 col-sm-6 col-xs-12">
                <div class="block-wrapper ship">
                    <div class="text-des">
                        <div class="icon-wrapper"><i class="fa fa-paper-plane"></i></div>
                        <div class="service-wrapper">
                            <h3>World-Wide Shipping</h3>
                            <p>On order over $99</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-md-3 col-sm-6 col-xs-12 ">
                <div class="block-wrapper return">
                    <div class="text-des">
                        <div class="icon-wrapper"><i class="fa fa-rotate-right"></i></div>
                        <div class="service-wrapper">
                            <h3>30 Days Return</h3>
                            <p>Moneyback guarantee </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-md-3 col-sm-6 col-xs-12">
                <div class="block-wrapper support">
                    <div class="text-des">
                        <div class="icon-wrapper"><i class="fa fa-umbrella"></i></div>
                        <div class="service-wrapper">
                            <h3>Support 24/7</h3>
                            <p>Call us: ( +123 ) 456 789</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-md-3 col-sm-6 col-xs-12">
                <div class="block-wrapper user">
                    <div class="text-des">
                        <div class="icon-wrapper"><i class="fa fa-tags"></i></div>
                        <div class="service-wrapper">
                            <h3>Member Discount</h3>
                            <p>25% on order over $199</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
