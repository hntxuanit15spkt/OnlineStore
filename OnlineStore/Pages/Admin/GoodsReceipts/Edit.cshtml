@page
@model OnlineStore.Pages.Admin.GoodsReceipts.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Layout/_AdminLayout.cshtml";
}

<h2>Edit</h2>

<h4>GoodsReceipt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GoodsReceipt.SupplierId" class="control-label"></label>
                <select asp-for="GoodsReceipt.SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                <span asp-validation-for="GoodsReceipt.SupplierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoodsReceipt.TotalAmount" class="control-label"></label>
                <input asp-for="GoodsReceipt.TotalAmount" class="form-control" />
                <span asp-validation-for="GoodsReceipt.TotalAmount" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="GoodsReceipt.Id" />
            <input type="hidden" asp-for="GoodsReceipt.Timestamp" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

