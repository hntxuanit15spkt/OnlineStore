@page
@model OnlineStore.Pages.Admin.Suppliers.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Layout/_AdminLayout.cshtml";
}

<h2>Edit</h2>

<h4>Supplier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Supplier.Name" class="control-label"></label>
                <input asp-for="Supplier.Name" class="form-control" />
                <span asp-validation-for="Supplier.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.Address" class="control-label"></label>
                <input asp-for="Supplier.Address" class="form-control" />
                <span asp-validation-for="Supplier.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.PhoneNumber" class="control-label"></label>
                <input asp-for="Supplier.PhoneNumber" class="form-control" />
                <span asp-validation-for="Supplier.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.Email" class="control-label"></label>
                <input asp-for="Supplier.Email" class="form-control" />
                <span asp-validation-for="Supplier.Email" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Supplier.Id" />
            <input type="hidden" asp-for="Supplier.Timestamp" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

