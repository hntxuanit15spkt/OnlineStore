@page
@model OnlineStore.Pages.Admin.Charts.BarChartModel
@{
    ViewData["Title"] = "BarChart";
    Layout = "~/Pages/Layout/_AdminLayout.cshtml";
}


<head>
   
    <script>
        window.onload = function () {

        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,

            title:{
                text:"Order OnlineStore"
            },
            axisX:{
                interval: 2
            },
            axisY2:{
                interlacedColor: "rgba(1,77,101,.2)",
                gridColor: "rgba(1,77,101,.1)",
                title: "Doanh thu theo tháng"
            },
            data: [{
                type: "bar",
                name: "companies",
                axisYType: "secondary",
                color: "#014D65",


                dataPoints: [
                    {
                        y:1,label: "Tháng 1"
                    },
                    { y: 7, label: "Tháng 2" },
                    { y: 5, label: "Tháng 3" },
                    { y: 9, label: "Tháng 4" },
                    { y: 7, label: "Tháng 5" },
                    { y: 7, label: "Tháng 6" },
                    { y: 9, label: "Tháng 7" },
                    { y: 8, label: "Tháng 8" },
                    { y: 11, label: "Tháng 9" },
                    { y: 15, label: "Tháng 10" },
                    { y: 12, label: "Tháng 11" },
                    { y: 15, label: "Tháng 12" }
                ]


            }]
        });
        chart.render();

        }
        </script>
</head>
<div id="chartContainer" style="height: 300px; width: 100%;"></div>
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
