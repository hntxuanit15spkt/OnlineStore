@using DAL.Models
@model OnlineStore.Pages.Account.RegisterModel

@{
    ViewData["Title"] = "";
    Layout = "~/Pages/Layout/_HomeLayout.cshtml";
}
<div class=" container">
    <div class=" register">
        <h1>Tạo tài khoản</h1>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6 register-top-grid">
                <div>
                    <label asp-for="Customer.FullName" class="control-label"></label>
                    <input asp-for="Customer.FullName" class="form-control"/>
                    <span asp-validation-for="Customer.FullName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Customer.DateOfBirth" class="control-label"></label>
                    <input asp-for="Customer.DateOfBirth" class="form-control"/>
                    <span asp-validation-for="Customer.DateOfBirth" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Customer.Gender" class="control-label"></label>
                    <select asp-for="Customer.Gender" placeholder="Chọn" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
                    <span asp-validation-for="Customer.Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 register-bottom-grid">
                <div>
                    <label asp-for="Customer.PhoneNumber" class="control-label"></label>
                    <input asp-for="Customer.PhoneNumber" class="form-control"/>
                    <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Customer.Email" class="control-label"></label>
                    <input asp-for="Customer.Email" class="form-control"/>
                    <span asp-validation-for="Customer.Email" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Customer.Password" class="control-label"></label>
                    <input asp-for="Customer.Password" class="form-control"/>
                    <span asp-validation-for="Customer.Password" class="text-danger"></span>
                </div>
                <input type="submit" value="Đăng ký" class="btn btn-default"/>
            </div>
            <div class="clearfix"> </div>
        </form>
    </div>
</div>
